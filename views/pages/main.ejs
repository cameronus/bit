<%- include ../partials/head.ejs %>
<title>Bit</title>
<%- include ../partials/header.ejs %>

<form id="form" method="post">
  <h1 class="mainTitle">bit</h1>
  <div class="text">
    <textarea id="text" class="form-control" name="text" autofocus maxlength="10000"></textarea>
  </div>
  <div>
    <input type="hidden" id="hidden" name="hidden" value="<%= hidden %>">
  </div><br>
  <div class="button">
    <button type="button" class="btn btn-success" onclick="createBit($('#text').val())">Create Bit</button><button type="button" class="btn btn-danger" onclick="createEncryptedBit()">Create Encrypted Bit</button>
  </div>
  <br/>
  <p class="regularText subtitles">
    Click <input name="permanent" id="permanent" type="checkbox"> to make bit permanent.<span> | </span>
    <a href="https://github.com/thecameronjones/bit/blob/master/README.md" target="_blank">What is bit?</a><span> | </span>
    <a href="http://commonmark.org/help/" target="_blank">How do I use markdown?</a>
  </p>
</form>

